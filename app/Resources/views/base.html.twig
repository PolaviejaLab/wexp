{% macro country(abbr, name) %}
<img class="language-flag" src="{{ asset('bundles/app/images/flags/' ~ abbr ~ '.png') }}" /> {{ name }}
{% endmacro %}

{% import _self as macros %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}       	
        	<link href="{{ asset('bundles/app/css/menu.css') }}" rel="stylesheet" />
        	<link href="{{ asset('bundles/app/css/layout.css') }}" rel="stylesheet" />
        	<link href="{{ asset('bundles/app/css/input.css') }}" rel="stylesheet" />
        {% endblock %}
        
        <script src="{{ asset('bundles/app/js/jquery-2.1.3.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/screens.js') }}"></script>
    </head>
    
    <body>
    	{% if is_granted('ROLE_RESEARCHER') %}
			{% include 'menubar_admin.html.twig' %}
		{% else %}
			{% include 'menubar_user.html.twig' %}
		{% endif %}
       
    	<div class="content noselect">
        	{% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
