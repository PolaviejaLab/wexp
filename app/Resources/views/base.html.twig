{% macro country(abbr, name) %}
<img class="language-flag" src="{{ asset('bundles/app/images/flags/' ~ abbr ~ '.png') }}" /> {{ name }}
{% endmacro %}

{% import _self as macros %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}       	
        	<link href="{{ asset('bundles/app/css/menu.css') }}" rel="stylesheet" />
        	<link href="{{ asset('bundles/app/css/layout.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
    	<div id="bar">
    		<ul class="menu-dropdown menu-horizontal">
    			<li class="mi-title">Setup</li>
    			<li>Experiments</li>
    		
    			<li class="mi-right">
    				{{ macros.country("en", "English") }}    				
    				
    				<ul class="menu-vertical">
    					<li>{{ macros.country("en", "English")}}</li>
    					<li>{{ macros.country("pt", "Português")}}</li>
    					<li>{{ macros.country("nl", "Nederlands")}}</li>
    					<li>{{ macros.country("de", "Deutsch")}}</li>
    				</ul>
    				
    			</li>
    			
    			<li class="mi-right">
    				Not logged in
    				
    				<ul class="menu-vertical">
    					<li>User profile</li>
   					</ul>
    			</li>    			
    		</ul>
    	</div>
       
    	<div id="content">
        	{% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
