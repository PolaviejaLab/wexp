{% extends 'base.html.twig' %}

{% block body %}

<p><h1>Available experiments</h1></p>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Experiment name</th>
			<th>Participate</th>
			{% if is_granted('ROLE_RESEARCHER') %}
			<th>Edit</th>
			{% endif %}
		</tr>
	</thead>
	<tbody>
		{% for experiment in experiments %}
		<tr>
			<td>{{ experiment.name }}</td>
			<td>
				<a class="btn-sm btn-primary" href="{{ path('experiment_run', {'experiment_id': experiment.id}) }}">
					<i class="glyphicon glyphicon-play"></i> &nbsp; Participate
				</a>
			</td>
			{% if is_granted('ROLE_RESEARCHER') %}
			<td><a class="btn-sm btn-primary" href="{{ path('admin_experiment_view', {'experiment': experiment.id}) }}">
				<i class="glyphicon glyphicon-pencil"></i> &nbsp; Edit
			</a></td>
			{% endif %}
		</tr>
	</tbody>
{% endfor %}
</table>

{% endblock %}